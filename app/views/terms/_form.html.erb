<%= simple_form_for @term, :html => { :class => 'form-horizontal' } do |f| %>

  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>

  <legend>Term</legend>
  <%= f.input :code, :input_html => { :class => "span6" } %>
  <%= f.input :name, :input_html => { :class => "span6" } %>
  <%= f.input :probation_term, :input_html => { :class => "span6" } %>
  <%= f.input :total_undergraduate_enrollment, :input_html => { :class => "span6" } %>
  
  <div class="form-actions">
	<%= f.button :submit, :class => 'btn-primary' %>
	<%= link_to 'Cancel', :back, :class => "btn btn-danger" %>
  </div>
	
<% end %>