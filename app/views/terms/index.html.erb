<h3>Terms</h3>
<table class="table table-condensed table-striped table-bordered">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Probation Term</th>
      <th>Active?</th>
    </tr>
  </thead>
  <tbody>
  <% @terms.each do |term| %>
    <tr>
      <td><%= link_to term.code, edit_term_path(term) %></td>
      <td><%= term.name %></td>
      <td><%= term.probation_term %></td>
      <td><%= term.active %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to("New term", new_term_path, :class => 'btn btn-mini') %>
